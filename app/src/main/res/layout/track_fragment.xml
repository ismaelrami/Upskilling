<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
            android:id="@+id/track_thumb"
            android:contentDescription="@string/avatar_content_description"
            android:layout_width="241dp"
            android:layout_height="220dp"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_marginTop="@dimen/default_margin"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
            android:id="@+id/track_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/track_thumb"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="338dp"
            tools:layout_marginTop="80dp"
            tools:layout_marginLeft="40dp"
            tools:text="@tools:sample/cities" />

    <TextView
            android:id="@+id/track_artits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="@id/track_title"
            app:layout_constraintTop_toBottomOf="@id/track_title"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="402dp"
            tools:text="@tools:sample/last_names" />

    <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_marginBottom="40dp"
            android:text="@string/back_btn"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="577dp" />
</androidx.constraintlayout.widget.ConstraintLayout>